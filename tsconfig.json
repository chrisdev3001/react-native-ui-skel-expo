{
  "extends": "expo/tsconfig.base",
  "include": ["**/*.ts", "**/*.tsx", "**/*.json", "app.config.js"],
  "exclude": ["node_modules", "package"],
  "compilerOptions": {
    "outDir": "./package",
    "skipLibCheck": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "declaration": true,
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "sourceMap": true,
    "sourceRoot": "/",
    "baseUrl": "./src",
    "strict": true,
  }
}
